{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "noImplicitAny": true, // 启用严格类型检查
    "strictNullChecks": true, // 启用空值检查
    "strictFunctionTypes": true, // 启用函数类型检查
    "noImplicitReturns": true, // 启用隐式返回检查
    "noFallthroughCasesInSwitch": true, // 启用switch语句检查
    "noUncheckedIndexedAccess": true, // 启用索引访问检查
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "ignoreDeprecations": "5.0", // 忽略弃用警告
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
